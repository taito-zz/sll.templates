<tal:block
  i18n:domain="collective.searchevent"
  tal:define="batch viewlet/batch;">
  <p tal:condition="not: batch"
     i18n:translate="">
    There are no search results found.
  </p>
  <tal:block tal:condition="batch">
    <tal:results repeat="item batch">
      <article>
        <h1>
          <a
            tal:attributes="
              href item/getURL;
              title item/Title
            "
             tal:content="item/Title"
             />
        </h1>
        <h2>
          <a
            class="parent"
            tal:attributes="
              alt python: viewlet.parent(item).Description();
              href python: viewlet.parent(item).absolute_url();
              title python: viewlet.parent(item).Title();
            "
            tal:content="python: viewlet.parent(item).Title()"
            />
          <span class="datetime" tal:content="python: viewlet.datetime(item)" />
        </h2>
        <p
          tal:condition="item/Description"
          tal:content="item/Description"
          />
      </article>
    </tal:results>
    <div metal:use-macro="context/batch_macros/macros/navigation" />
  </tal:block>
</tal:block>
