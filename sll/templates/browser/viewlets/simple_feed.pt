<div class="simple-feed"
     tal:repeat="item view/items">
  <article>
    <h1>
      <a tal:content="item/title"
         tal:attributes="href item/url;
                         title item/title" />
    </h1>
    <h2>
      <a tal:attributes="href item/parent_url;
                         title item/parent;"
         tal:content="item/parent" />&nbsp;&nbsp;
      <span
        class="sll-date"
        tal:content="item/date"
        />
    </h2>
  </article>
</div>