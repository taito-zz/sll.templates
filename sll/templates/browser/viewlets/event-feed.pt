<tal:block
  i18n:domain="collective.searchevent"
  tal:define="items viewlet/items;">
  <p tal:condition="not: items"
     i18n:translate="">
    There are no upcoming events.
  </p>
  <tal:block tal:condition="items">
    <div class="simple-feed" tal:repeat="item items">
      <article>
        <h1>
          <a
            tal:attributes="
              href item/url;
              title item/title;"
             tal:content="item/title"
             />
        </h1>
        <h2>
          <a
            class="parent"
            tal:attributes="
              alt item/parent_description;
              href item/parent_url;
              title item/parent_title;"
            tal:content="item/parent_title"
            />
          <span class="sll-date" tal:content="item/datetime" />
        </h2>
      </article>
    </div>
  </tal:block>
</tal:block>