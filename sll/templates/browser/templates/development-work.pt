<html
  i18n:domain="sll.templates"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  >
  <body>
    <metal:main fill-slot="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading" tal:content="context/title" />
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <section tal:condition="view/items">
          <table>
            <thead>
              <tr>
                <th i18n:translate="">Title</th>
                <th i18n:translate="">Description</th>
                <th i18n:translate="">Date</th>
                <th i18n:translate="">Start</th>
                <th i18n:translate="">End</th>
                <th i18n:translate="">Duration (min)</th>
              </tr>
            </thead>
            <tbody>
              <tr tal:repeat="item view/items">
                <td tal:content="item/title" />
                <td tal:content="item/description" />
                <td tal:content="item/date" />
                <td tal:content="item/start" />
                <td tal:content="item/end" />
                <td tal:content="item/duration" />
              </tr>
            </tbody>
          </table>
          <dl>
            <dt i18n:translate="">Total Time</dt>
            <dd tal:content="view/total_time" />
            <dt i18n:translate="">Total Charge</dt>
            <dl>
              <table>
                <thead>
                  <tr>
                    <th i18n:translate="">ALV 0%</th>
                    <th i18n:translate="">ALV</th>
                    <th i18n:translate="">ALV 23%</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td tal:content="view/total_without_alv" />
                    <td tal:content="view/total_alv" />
                    <td tal:content="view/total_with_alv" />
                  </tr>
                </tbody>
              </table>
          </dl>
        </section>
        <div tal:replace="structure provider:plone.belowcontentbody" />
    </metal:main>
  </body>
</html>