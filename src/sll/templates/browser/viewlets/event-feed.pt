<section
  id="event-feed"
  i18n:domain="sll.templates">
  <h1
    tal:condition="viewlet/link"
    tal:define="item viewlet/link">
    <a
      tal:attributes="href item/url; title item/title"
      tal:content="item/title" />
  </h1>
  <p tal:condition="not: viewlet/items"
     i18n:translate="">
    There are no upcoming events.
  </p>
  <article tal:repeat="item viewlet/items">
    <h1>
      <a
        tal:attributes="
          href item/url;
          title item/title;"
         tal:content="item/title"
         />
    </h1>
    <h2>
      <a
        class="parent"
        tal:attributes="
          href item/parent_url;
          title item/parent_title;"
        tal:content="item/parent_title"
        />
      <span class="sll-date" tal:content="item/datetime" />
    </h2>
  </article>
</section>